/* pages/drawingboard/drawingboard.wxss */

.myCanvas{
  border: 1px solid #666;
}

.toolsbar{
  width: 97%;
  height: 200rpx;
  text-align: center;
  border: 1px solid #000;
  margin: 1px 1px 1px 1px;
  background-color: #fff;
}

.canvas_tools{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.t-item{
  width: 76rpx;
  height: 76rpx;
  margin: 6rpx;
  text-align: center;
  line-height: 76rpx;
  border-radius: 50%;
}

.t-item-cur{
  width: 70rpx;
  height: 70rpx;
  border: 2px solid #CCC;
  margin: 6rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 50%;
}

.t-clear{
  width: 70rpx;
  height: 70rpx;
  margin: 6rpx;
  text-align: center;
  line-height: 70rpx;
  border: 2px solid #bfbfbf;
  border-radius: 5rpx;
}

.t-insert{
  width: 78rpx;
  height: 78rpx;
  margin: 6rpx;
}
